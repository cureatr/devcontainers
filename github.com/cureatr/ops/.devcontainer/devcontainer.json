{
    "name": "Cureatr Ops",
    "image": "cureatr/cureatr-vm",
    "init": true,
    "remoteUser": "cureatr",
    "overrideCommand": false,
    "remoteEnv": {
        "PATH": "/site/venv/bin:${containerEnv:PATH}",
        "PYTHONPATH": "ec2/"
    },
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.isort",
        "ms-python.black-formatter",
        "charliermarsh.ruff",
        "eamodio.gitlens"
    ],
    "settings": {
        "python.defaultInterpreterPath": "/site/venv/bin/python",
        "python.pythonPath": "/site/venv/bin/python",
        "python.languageServer": "Pylance",
        "python.linting.lintOnSave": true,
        "python.linting.pylintEnabled": false,
        "ruff.path": ["/site/venv/bin/ruff"],
        "ruff.args": ["--config=${containerWorkspaceFolder}/ec2/pyproject.toml"],
        "ruff.organizeImports": false,
        "ruff.fixAll": false,
        "python.formatting.provider": "black",
        "python.formatting.blackPath": "/site/venv/bin/black",
        "python.formatting.blackArgs": [
            "--config", "${containerWorkspaceFolder}/ec2/pyproject.toml"
        ],
        "source.organizeImports": true,
        "python.sortImports.path": "/site/venv/bin/isort",
        "python.sortImports.args": [
            "--settings-path", "${containerWorkspaceFolder}/ec2/pyproject.toml"
        ],
        "git.ignoreLimitWarning": true,
        "[python]": {
            "editor.defaultFormatter": "ms-python.black-formatter",
            "editor.formatOnSave": true,
            "editor.codeActionsOnSave": [
                "source.organizeImports"
            ]
        }
    }
}
